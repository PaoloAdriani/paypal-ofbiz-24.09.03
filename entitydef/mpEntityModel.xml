<?xml version="1.0" encoding="UTF-8"?>
<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">
    <!-- ========================================================= -->
    <!-- ======================== Defaults ======================= -->
    <!-- ========================================================= -->
    <title>Entity of Paypal Component</title>
    <description>None</description>
    <copyright></copyright>
    <version></version>
    
    <entity entity-name="MpAccessToken" package-name="mp.order" title="Custom entity to store third-party API Access Tokens">
    <field name="appId" type="id-long">
            <description>ID of the third-party application the token is used for.</description>
    </field>
    <field name="description" type="description"></field>
    <field name="tokenValue" type="value">
        <description>The value of the Auth Token</description>
    </field>
    <field name="tokenTTL" type="numeric">
        <description>Token Time To Live: time until token expires</description>
    </field>
    <field name="tokenType" type="name">
        <description>Type of the Token (ie: Bearer)</description>
    </field>
    <field name="nonceValue" type="description">
        <description>Number-Used-Once (nonce) value </description>
    </field>
    <prim-key field="appId"/>
	</entity>
	
	 <extend-entity entity-name="OrderHeader">
        <field name="mpPayPalOrderId" type="id">
            <description>PayPal orderId</description>
        </field>
    </extend-entity>

</entitymodel>